{
  "compilerOptions": {
    "target": "ESNext", // 或者 "ES2020", "ES2022"
    "module": "ESNext", // 确保是 ESNext, ES2020, ES2022, node16, 或 nodenext
    "moduleResolution": "Node", // 或 "Node16", "Bundler"
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules"]
}